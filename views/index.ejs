<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/stylesheet.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/components/icon.min.css" integrity="sha512-8Tb+T7SKUFQWOPIQCaLDWWe1K/SY8hvHl7brOH8Nz5z1VT8fnf8B+9neoUzmFY3OzkWMMs3OjrwZALgB1oXFBg==" crossorigin="anonymous" />
	<link href="https://fonts.googleapis.com/css2?family=Rowdies:wght@700&display=swap" rel="stylesheet">
	<link rel="icon" type="image/png" href="/media/shopping-cart.png">
    <title>ARB Shopping List</title>
</head>
<body>
    <div class="container-fluid">
		<h1>
			ARB Shopping List
		</h1>
        <div class="the-container">
            <div class="container">
				<form action='/index' method='POST'>
					<div id='add-item' class="form-group row p-3">
						<div class="col-9">
							<input class='form-control' type="text" name='entry' placeholder="Add an item">
						</div>
						<div class="col-3 pl-0">
							<input class='btn btn-md btn-primary' type='submit' value='Add'>
						</div>
					</div>
				</form>
            </div>
            <div class="item-container">
                <ul>
					
					<% entries.forEach(function(entry){ %>
						
						<form class='li-form m-0' action='/<%= entry._id %>/?_method=DELETE' method='POST'>
							<li><span class='spacer'></span>
								<%= entry.entry %>
							<button class='button'><i class="trash icon"></i></button>
							</li>
						</form>
						
					<% }) %>
					
                    <!-- <li><i class="trash icon"></i>Cheese<span class='spacer'></span></li>
                    <li><i class="trash icon"></i>Milk<span class='spacer'></span></li>
                    <li><i class="trash icon"></i>Eggs<span class='spacer'></span></li> -->
                </ul>
            </div>   
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/scripts/todo_script.js"></script>
</body>
</html>